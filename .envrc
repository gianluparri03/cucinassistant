layout go


if [ "$(docker ps -a -q -f name='cucinassistant-db')" ]; then
    if [ ! "$(docker ps -aq -f status='running' -f name='cucinassistant-db')" ]; then
        docker start cucinassistant-db
    fi
else
    docker run -d \
        --name cucinassistant-db \
        -e MARIADB_USER=cucinassistant \
        -e MARIADB_PASSWORD=cucinassistant \
        -e MARIADB_DATABASE=cucinassistant \
        -e MARIADB_RANDOM_ROOT_PASSWORD=1 \
        -p 3306:3306 \
        mariadb:10.6
fi
